{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"lib": ["es2021", "es7", "es6", "DOM"],
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"declaration": false,
		"allowJs": true,
		"paths": {
			"@config/*": ["config/*"],
			"@models/*": ["models/*"],
			"@controllers/*": ["controllers/*"],
			"@utils/*": ["utils/*"],
			"@routes/*": ["routes/*"],
			"@middlewares/*": ["middlewares/*"],
			"@repositories/*": ["repositories/*"],
			"@validators/*": ["validators/*"],
			"@services/*": ["services/*"],
			"@cron/*": ["cron/*"],
		},
		"typeRoots": ["src/**/types", "node_modules/@types"],
	},
  	"compileOnSave": true,
	"include": ["./src/**/*"],
	"exclude": ["node_modules/*", "scripts/*"],
  	"strict": true,
  	"noUnusedLocals": true,
  	"noUnusedParameters": true
}